{
  "rules": {
    "users": {
      ".read": false,
      ".write": false,
      "$verificationCode": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['name', 'quotaLimitMB', 'quotaUsedMB'])",
        "name": {
          ".validate": "newData.isString()",
          ".write": false
        },
        "quotaLimitMB": {
          ".validate": "newData.isNumber() && (newData.val() >= 0 || newData.val() === -1)",
          ".write": false
        },
        "quotaUsedMB": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "cachedAssets": {
          ".validate": "newData.hasChildren()"
        },
        "partialDownloads": {
          ".validate": "newData.hasChildren()"
        }
      }
    },
    "rateLimit": {
      "$verificationCode": {
        ".read": false,
        ".write": false
      }
    }
  }
}
